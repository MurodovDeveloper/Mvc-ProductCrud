@model List<Product>

<div class="container">
    <div class="row">
        <div class="col-sm">
            <a asp-controller="Product" asp-action="Create">Add</a>
        </div>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td><a asp-action="Update" asp-route-id="@item.Id">Edit</a></td>
                    <td><a asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
